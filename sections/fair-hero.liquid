<div class="hero_body row" style="background:{{section.settings.background }}">
  <div class="hero_row row">
    <div class="col-md-6 hero_col-left" style="background:{{section.settings.background_col }}">
      <div class="hero_col-left-text">
        <p class="hero_col-left-text-title">{{section.settings.hero-headline}}</p>
        <p class="hero_col-left-text-sub">{{section.settings.hero-subtitle}}</p>
      </div>
    </div>
    <div class="col-md-6">
    
    </div>
  </div>
</div>





{% stylesheet %}
	.hero_body{
		height:100vh;
	}
	.hero_col-left{
		height:100vh;
	}
	.hero_col-left-text{
		width:100%;
		margin-top:15%;
		margin-left:10%;
		margin-right: 10%;
	}
	.hero_col-left-text-title{
		font-size: 8rem;
	}
	.hero_col-left-text-subtitle{
		font-size: 5rem;
	}
{% endstylesheet %}

{% schema %}
  {
    "name": "Fair Hero",
    "settings": [
		{
			"type": "color",
  			"id": "background",
  			"label": "bg color"
		},
		{
			"type": "color",
  			"id": "background_col",
  			"label": "bg color",
			"default": "#ffffff"
		},
		{
			"type": "text",
  			"id": "hero-headline",
  			"label": "Headline",
			"default": "FAIR <br>THEME"
		},
		{
			"type": "text",
  			"id": "hero-subtitle",
  			"label": "Headline",
			"default": "The modern theme that makes your brand shine"
		}
	],
	"presets": [
		{
			"name": "Fair Hero",
			"category": "ADVANCED LAYOUT"
		}
	]
  }
{% endschema %}


