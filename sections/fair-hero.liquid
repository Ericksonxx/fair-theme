<div class="hero_body row">
  <div class="hero_row row">
    <div class="col-md-6 hero_col-left" style="background:{{section.settings.background_col }}">
      <div class="hero_col-left-text" style=" background-image:url({{section.settings.hero-background-image  | img_url: 'master' }})">
        <p class="hero_col-left-text-title" style="font:{{section.settings.heading_font}}; color:transparent">
          {{section.settings.hero-headline}}
        </p>
        <p class="hero_col-left-text-sub" style="font:{{section.settings.subtitle_font}}; color:transparent">
          {{section.settings.hero-subtitle}}
        </p>
        <div class="hero_cta-container">
        	<a href="https://test-first1010.myshopify.com/collections/all">
              <p class="hero_cta-text">{{section.settings.hero_cta-text}}<span><img class="hero_cta-icon" src="{{ section.settings.hero_cta-icon | img_url: '20x20' }}" /></span></p>
        	</a>
        </div>
        <div class="hero_labeled-container">
          	<p class="hero_labeled-text">{{section.settings.hero_labeled-text}}</p>
        </div>
      </div>
    </div>
    <div class="col-md-6 hero_col-right" style="background-image:url({{section.settings.hero-background-image  | img_url: 'master' }})">
      <div class="hero_img-container">
        <div class="hero_img-bottom" style="background:{{section.settings.background_col }}">
          <div class="row hero_img-bottom-content" style="background:{{section.settings.background_col }}">
            <div class="col-md-3">
              <p class="hero_img-bottom-number">{{ section.settings.hero_record1-number }}</p>
              <p class="hero_img-bottom-noun">{{ section.settings.hero_record1-noun }}</p>
            </div>
            <div class="col-md-3">
            	<p class="hero_img-bottom-number">{{ section.settings.hero_record2-number }}</p>
                <p class="hero_img-bottom-noun">{{ section.settings.hero_record2-noun }}</p>
            </div>
            <div class="col-md-3">
            	<p class="hero_img-bottom-number">{{ section.settings.hero_record3-number }}</p>
                <p class="hero_img-bottom-noun">{{ section.settings.hero_record3-noun }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


