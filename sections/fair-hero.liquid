{% stylesheet %}
	.hero_body{
		height:100vh;
	}
	.hero_col-left{
		height:100vh;
	}
	.hero_col-left-text{
		width:100%;
		margin-top:5%;
		margin-left:10%;
		margin-right: 10%;
	}
	.hero_col-left-text-title{
		font-size: 8rem;
	}
	.hero_col-left-text-sub{
		font-size: 2.5rem;
		width:55%;
	}
{% endstylesheet %}

{% schema %}
  {
    "name": "Fair Hero",
    "settings": [
		{
			"type": "color",
  			"id": "background",
  			"label": "bg color"
		},
		{
			"type": "color",
  			"id": "background_col",
  			"label": "bg color",
			"default": "#ffffff"
		},
		{
			"type": "text",
  			"id": "hero-headline",
  			"label": "Headline",
			"default": "FAIR <br>THEME"
		},
		{
			"type": "text",
  			"id": "hero-subtitle",
  			"label": "Headline",
			"default": "The modern theme that makes your brand shine"
		},
		{
  			"type": "font_picker",
  			"id": "heading_font",
  			"label": "Heading font",
  			"default": "prompt_n8"
		},
		{
  			"type": "font_picker",
  			"id": "subtitle_font",
  			"label": "Heading font",
  			"default": "prompt_n6"
		},
		{
    		"type": "image_picker",
    		"id": "image",
    		"label": "Hero Image"
  		}

	],
	"presets": [
		{
			"name": "Fair Hero",
			"category": "ADVANCED LAYOUT"
		}
	]
  }
{% endschema %}


