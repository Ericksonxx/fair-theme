{% stylesheet %}
.gradient{
	width:100vw !important;
}
	.hero_body{
		height:90vh;
	}
	.hero_col-left{
		height:90vh;
	}
	.hero_col-right{
		background-size:cover;
		background-position:center;
	}
	.hero_col-left-text{
		width:100%;
		margin-top:5%;
		margin-left:10%;
		margin-right: 10%;
  		background-clip: text;
		-webkit-background-clip: text;
		color: transparent;
	}
	h1{
  		font-size: 55px;
	}
	.hero_col-left-text-title{
		font-size: 10rem;
		font-weight: 700;
	}
	.hero_col-left-text-sub{
		font-size: 1.5rem;
		width:55%;
 		text-transform: uppercase; 
	}
	.hero_img-container{
		height:100%;
		width:100%;
	}
	.hero-image{
		margin-left: auto;
  		margin-right: auto;
	}
	.hero_cta-container{
		margin-top:15%;
		color:#e73939;
	}
	.hero_labeled-container{
		position:absolute;
		bottom:50px;
		color:black;
	}
	a{
		text-decoration:none !important;
	}
	.hero_cta-icon{
		margin-left: 15px;
	}
	.hero_cta-text{
		font-size:15px;
		text-transform: uppercase;
		text-decoration:none !important;
		color: #000000;
	}
	.hero_img-bottom{
		width:inherit;
	}
	.hero_img-bottom-content{
		background-color:pink;
		width:20%;
		height:140px;
	}
	.hero_img-bottom-number{
		font-size:20px;
		margin-top:20px;
		font-weight:600;
	}
	.hero_img-bottom-noun{
		font-size:10px;
		font-weight:400;
	}
{% endstylesheet %}

