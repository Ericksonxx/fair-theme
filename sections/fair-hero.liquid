<div class="hero_body row" style="background:{{section.settings.background }}">
  <div class="hero_row row">
    <div class="col-md-6 hero_col-left" style="background:{{section.settings.background_col }}">
      <div class="hero_col-left-text">
        <p class="hero_col-left-text-title" style="font:{{section.settings.heading_font}}; color:{{section.settings.background}}">
          {{section.settings.hero-headline}}
        </p>
        <p class="hero_col-left-text-sub" style="font:{{section.settings.subtitle_font}}; color:{{section.settings.background}}">
          {{section.settings.hero-subtitle}}
        </p>
      </div>
    </div>
    <div class="col-md-6 hero_col-right">
      <div class="hero_img-container">
      		{{section.settings.image | asset_url | img_tag: 'The Soap Store'}}
      </div>
    </div>
  </div>
</div>
