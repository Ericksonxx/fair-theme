{% stylesheet %}
	.hero_body{
		height:100vh;
		width:100vw;
		background-color:#f5f5ec;
	}
	.hero_title-main{
		padding: 5% 10% 5% 10%;
	}
	.hero_title{
		font-size:5rem;
	}
	.hero_row-main{
		margin-top:4vh;
		padding-left:10%;
		padding-right:10%;
	}
	.hero_img-container{
		width:100%;
		text-align:right;
	}
	.hero_img-container img{
		max-width:60%;
		max-height:60%;
		border-radius:  0 30% 30% 30%;
	}
	.hero_row_boxes-main{
		position: relative;
	}
    .hero_row-boxes-container{
	    position:absolute;
		bottom:50px;
	}
	.hero_boxes-box{
		width:250px;
		height:120px;
		margin-left:15%;
		margin-top: 40px;
		background-color:#ebd9d1;
		box-shadow: 1px 3px  10px rgb(0, 0, 0,0.2);
		border-radius:30px;
	}
	.hero_social-banner{
		position:relative;
	}
	.hero_social-banner{
		background-color:white;
		position:absolute;
		bottom:10%;
		right:0;
		width:50%;
		border-radius: 30px 0% 0% 30px;
	}





{% endstylesheet %}

{% schema %}
  {
    "name": "Fair Hero",
    "settings": [
		{
 			"type": "text",
     		"id": "hero-title",
      		"default": "Say what you feel with Fair",
      		"label": "Hero title"
		},
 		{
    		"type": "image_picker",
    		"id": "hero-image",
    		"label": "Hero Image"
  		}
	],
	"presets": [
		{
			"name": "Fair Hero",
			"category": "ADVANCED LAYOUT"
		}
	]
  }
{% endschema %}


