<div class="f-p_section">
  <div class="f-p_container row">
    <div class="col-md-8 f-p_image">
<img class="img-fluid f-p_image"src="{{ section.settings.product.featured_image | img_url }}"/>
    </div>
    <div class="col-md-4">
      <h1>{{section.settings.product.title}}</h1>
    </div>
  </div>
</div>

{% stylesheet %}
	.f-p_image img{
		width:50%;
		padding:15%;
	}
{% endstylesheet %}

{% schema %}
  {
    "name": "Section name",
    "settings": [
		{
    		"type": "product",
    		"id": "product",
    		"label": "Choose featured product"
  		}
	],
	"presets": [
		{
			"name": "Fair Featured Product",
			"category": "ADVANCED LAYOUT"
		}
	]
  }
{% endschema %}



